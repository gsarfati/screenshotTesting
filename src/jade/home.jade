.form
	input(ng-model="url", placeholder="Url")
	select(ng-model="deviceSelected", ng-options="device for device in devices") {{ device }}
	button(ng-click="screenshot()") Take picture
.render
	.status.no-diff(
		ng-if="nbPixelDiff == 0"
	) equal
	.status.diff(
		ng-if="nbPixelDiff != 0"
	) not equal
	img(
		ng-if="!loader"
		width="100%"
		src="{{ screenshotSrc }}"
	)
	img(
		ng-if="loader"
		src="./loader.gif")
	.path {{ nbPixelDiff }}
